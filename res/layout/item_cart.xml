<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:padding="8dp"
                android:background="@drawable/zhuye_item_select"
                android:layout_width="match_parent"
                android:layout_height="120dp">
    <ImageView android:layout_width="30dp"
               android:id="@+id/select_is"
               android:layout_centerVertical="true"
               android:src="@drawable/select_one"
               android:layout_height="30dp"/>
    <ImageView android:layout_width="100dp"
               android:scaleType="centerCrop"
               android:src="@drawable/mf1"
               android:id="@+id/item_pic"
               android:layout_marginLeft="5dp"
               android:layout_toRightOf="@+id/select_is"
               android:layout_centerVertical="true"
               android:layout_height="100dp"/>
    <TextView android:layout_width="match_parent"
              android:layout_marginTop="8dp"
              android:text="这里是标题这里是标题这里是标题这里是标题这里是标题这里是标题这里是标题"
              android:textColor="@color/black"
              android:textSize="16sp"
              android:lineSpacingMultiplier="1.2"
              android:ellipsize="end"
              android:id="@+id/item_cont"
              android:layout_marginLeft="5dp"
              android:layout_toRightOf="@+id/item_pic"
              android:layout_height="40dp"/>
    <TextView android:layout_width="wrap_content"
              android:text="￥98.00"
              android:layout_toRightOf="@+id/item_pic"
              android:layout_below="@+id/item_cont"
              android:textColor="@color/red"
              android:layout_marginLeft="8dp"
              android:layout_marginTop="10dp"
              android:id="@+id/item_money"
              android:layout_height="wrap_content"/>
    <ImageView android:layout_width="wrap_content"
               android:src="@drawable/goods_jian"
               android:layout_marginLeft="50dp"
               android:padding="8dp"
               android:layout_toRightOf="@+id/item_pic"
               android:layout_below="@+id/item_money"
               android:id="@+id/goods_jian"
               android:layout_height="wrap_content"/>
    <TextView android:layout_width="wrap_content"
              android:text="100"
              android:textColor="@color/black"
              android:id="@+id/item_num"
              android:padding="5dp"
              android:layout_below="@+id/item_money"
              android:layout_toRightOf="@+id/goods_jian"
              android:layout_height="wrap_content"/>

    <ImageView android:layout_width="wrap_content"
               android:padding="8dp"
               android:id="@+id/goods_add"
               android:layout_below="@+id/item_money"
               android:src="@drawable/goods_add"
               android:layout_toRightOf="@+id/item_num"
               android:layout_height="wrap_content"/>
</RelativeLayout>