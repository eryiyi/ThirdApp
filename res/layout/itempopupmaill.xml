<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/refreshmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@color/transparent"
        android:src="@drawable/refreshmall" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.2dip"
        android:background="@color/white" />

    <ImageView
        android:id="@+id/sharemall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@color/transparent"
        android:src="@drawable/sharemall" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.2dip"
        android:background="@color/white" />

    <ImageView
        android:id="@+id/searchmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@color/transparent"
        android:src="@drawable/searchmall" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.2dip"
        android:background="@color/white" />

    <ImageView
        android:id="@+id/mainpagemall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@color/transparent"
        android:src="@drawable/mainpagemall" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.2dip"
        android:background="@color/white" />

</LinearLayout>