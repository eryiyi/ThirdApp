<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/titlemany" >

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:contentDescription="@color/transparent"
            android:padding="10dp"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            android:text="@string/study"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:contentDescription="@color/transparent"
            android:padding="10dp"
            android:scaleX="0.8"
            android:scaleY="0.9"
            android:src="@drawable/menu" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/title2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:background="@color/common_grey_background"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/stdimage"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:contentDescription="@color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/demo5" />

        <TextView
            android:id="@+id/stdname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@id/stdimage"
            android:text="@string/demo" />

        <ImageView
            android:id="@+id/img1"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_alignBottom="@id/stdimage"
            android:layout_below="@id/stdname"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/stdimage"
            android:contentDescription="@color/transparent"
            android:scaleX="0.9"
            android:scaleY="0.9"
            android:src="@drawable/studylastgood" />

        <TextView
            android:id="@+id/t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/stdname"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="9.5dp"
            android:layout_toRightOf="@id/img1"
            android:text="@string/num1"
            android:textColor="@color/common_greythird"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/img2"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_alignBottom="@id/stdimage"
            android:layout_below="@id/stdname"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/t1"
            android:contentDescription="@color/transparent"
            android:scaleX="0.9"
            android:scaleY="0.9"
            android:src="@drawable/studylastask" />

        <TextView
            android:id="@+id/t2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/stdname"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="9dp"
            android:layout_toRightOf="@id/img2"
            android:text="@string/num1"
            android:textColor="@color/common_greythird"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/img3"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_alignBottom="@id/stdimage"
            android:layout_below="@id/stdname"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/t2"
            android:contentDescription="@color/transparent"
            android:scaleX="0.9"
            android:scaleY="0.9"
            android:src="@drawable/studylastanswer" />

        <TextView
            android:id="@+id/t3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/stdname"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="9dp"
            android:layout_toRightOf="@id/img3"
            android:text="@string/num1"
            android:textColor="@color/common_greythird"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/goodanswer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:contentDescription="@color/transparent"
            android:scaleX="0.9"
            android:scaleY="0.9"
            android:src="@drawable/goodanswer" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="3dp"
            android:layout_toLeftOf="@id/goodanswer"
            android:contentDescription="@color/transparent"
            android:scaleX="0.9"
            android:scaleY="0.9"
            android:src="@drawable/bigcrown" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="@drawable/studybottom"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@color/transparent"
            android:scaleX="0.9"
            android:scaleY="0.9"
            android:src="@drawable/studybottomgood" />

         <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@color/transparent"
            android:scaleX="0.9"
            android:scaleY="0.9"
            android:src="@drawable/studybottomstar" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@color/transparent"
            android:scaleX="0.9"
            android:scaleY="0.9"
            android:src="@drawable/studybottomcrown" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom"
        android:layout_below="@id/title2"
        android:id="@+id/cont"
        android:gravity="center_horizontal"
        android:paddingTop="5dp"
        android:text="@string/demo" />

</RelativeLayout>