<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout android:layout_width="match_parent"
                    android:background="@drawable/titlemany"
                    android:id="@+id/top_liner"
                    android:layout_height="45dip">


        <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:contentDescription="@color/transparent"
                android:padding="10dp"
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:src="@drawable/back" />


        <TextView android:layout_width="wrap_content"
                  android:text="收货地址"
                  android:textSize="16sp"
                  android:layout_centerInParent="true"
                  android:layout_height="wrap_content"/>
    </RelativeLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/dark_gray"
            ></View>

    <com.example.thirdapp.view.ReboundScrollView android:layout_width="match_parent"
                                                 android:layout_height="match_parent">


    <LinearLayout android:layout_width="match_parent"
                  android:layout_weight="1"
                  android:focusable="true"
                  android:focusableInTouchMode="true"
                  android:padding="8dp"
                  android:orientation="vertical"
                  android:layout_height="wrap_content">

        <EditText
                android:id="@+id/nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:textSize="14sp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:paddingTop="10dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="10dp"
                android:padding="15dp"
                android:background="@drawable/et_bule_bg"
                android:hint="收货人姓名"/>
        <EditText
                android:id="@+id/telephone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:textSize="14sp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="10dp"
                android:paddingTop="10dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="10dp"
                android:padding="15dp"
                android:background="@drawable/et_bule_bg"
                android:hint="电话"/>
        <EditText
                android:id="@+id/mobile"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:textSize="14sp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="10dp"
                android:paddingTop="10dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="10dp"
                android:padding="15dp"
                android:background="@drawable/et_bule_bg"
                android:hint="手机"/>
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="horizontal"
                      android:layout_height="wrap_content">
            <Spinner
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="7px"
                    android:id="@+id/spinner1"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

            </Spinner>

            <Spinner
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="7px"
                    android:id="@+id/spinner2"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

            </Spinner>

            <Spinner
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="7px"
                    android:id="@+id/spinner3"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

            </Spinner>

        </LinearLayout>


        <EditText
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:textSize="14sp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:paddingTop="10dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="10dp"
                android:padding="15dp"
                android:background="@drawable/et_bule_bg"
                android:hint="详细地址"/>
        <EditText
                android:id="@+id/codeyb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:textSize="14sp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:paddingTop="10dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="10dp"
                android:padding="15dp"
                android:background="@drawable/et_bule_bg"
                android:hint="邮编"/>
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="horizontal"
                      android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content"
                      android:text="*设置为默认收货地址"
                      android:layout_weight="1"
                      android:textColor="@color/black"
                      android:textSize="16sp"
                      android:layout_height="wrap_content"/>

            <CheckBox android:layout_width="wrap_content"
                      android:id="@+id/checkbox"
                      android:layout_below="@+id/view_line_four"
                      android:layout_alignParentRight="true"
                      android:layout_height="wrap_content"/>
        </LinearLayout>

        <Button android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:text="确定"
                android:layout_marginTop="20dp"
                android:id="@+id/sure"
                android:textColor="@color/white"
                android:layout_marginRight="20dp"
                android:background="@drawable/red"
                android:layout_height="45dp"/>
    </LinearLayout>
    </com.example.thirdapp.view.ReboundScrollView>

</LinearLayout>