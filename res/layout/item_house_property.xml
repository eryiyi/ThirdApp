               android:src="@drawable/house_one"
               android:layout_gravity="center"
               android:padding="3dp"
               android:id="@+id/pic"
               android:layout_height="wrap_content"/>
    <TextView android:layout_width="wrap_content"
              android:text="dianshi"
              android:layout_gravity="center"
              android:gravity="center"
              android:id="@+id/title"
              android:textSize="12sp"
