<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@drawable/login_color"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/titlemany" >

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:contentDescription="@color/transparent"
            android:padding="10dp"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            android:text="忘记密码"
            android:textSize="16sp" />
    </RelativeLayout>


    <EditText android:layout_width="match_parent"
              android:padding="15dp"
              android:background="@color/white"
              android:gravity="center|left"
              android:singleLine="true"
              android:id="@+id/mobile"
              android:layout_marginTop="20dp"
              android:hint="输入手机号码"
              android:layout_height="wrap_content"/>
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:background="@color/white"
                  android:layout_height="wrap_content">
        <EditText android:layout_width="wrap_content"
                  android:padding="15dp"
                  android:layout_weight="1"
                  android:singleLine="true"
                  android:background="@color/white"
                  android:gravity="center|left"
                  android:layout_marginTop="8dp"
                  android:hint="输入验证码"
                  android:id="@+id/card"
                  android:layout_height="wrap_content"/>
        <Button android:layout_width="wrap_content"
                android:text="获取验证码"
                android:padding="15dp"
                android:textStyle="bold"
                android:textColor="@color/light_gray"
                android:id="@+id/sendCard"
                android:layout_marginTop="3dp"
                android:singleLine="true"
                android:background="@color/gray"
                android:gravity="center"
                android:layout_height="wrap_content"/>
    </LinearLayout>

    <EditText android:layout_width="match_parent"
              android:padding="15dp"
              android:background="@color/white"
              android:gravity="center|left"
              android:password="true"
              android:layout_marginTop="8dp"
              android:singleLine="true"
              android:hint="输入密码"
              android:id="@+id/password_one"
              android:layout_height="wrap_content"/>
    <EditText android:layout_width="match_parent"
              android:padding="15dp"
              android:background="@color/white"
              android:gravity="center|left"
              android:password="true"
              android:singleLine="true"
              android:layout_marginTop="8dp"
              android:hint="再输入密码"
              android:id="@+id/password_two"
              android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/getcode"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/layout_selectorred"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="确 定"
        android:textSize="16sp"
        android:textColor="@color/common_white" />

</LinearLayout>