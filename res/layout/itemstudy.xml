<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dp"
    android:background="@color/header_background"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/stdimage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:contentDescription="@color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/demo5" />

    <TextView
        android:id="@+id/stdname"
        android:textColor="@color/common_greythird"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@id/stdimage"
        android:text="@string/demo" />

    

    <TextView
        android:id="@+id/stdtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="3dp"
        android:text="@string/demo"
        android:textColor="@color/common_greythird"
        android:textSize="11sp" />
    
    <TextView
        android:id="@+id/stdchecknum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="3dp"
        android:layout_below="@id/stdtime"
        android:drawablePadding="2dp"
        android:text="@string/demo"
        android:drawableLeft="@drawable/checknumber"
        android:textColor="@color/common_greythird"
        android:textSize="11sp" />
    
    <TextView
        android:id="@+id/stdcontent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_alignBottom="@id/stdimage"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@id/stdimage"
        android:layout_toLeftOf="@id/stdchecknum"
        android:singleLine="true"
        android:text="@string/demo"
        android:textColor="@color/common_greythird"
        android:textSize="13sp" />
</RelativeLayout>