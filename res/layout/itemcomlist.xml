<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="5dp" >

    <ImageView
        android:id="@+id/imagelist"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:contentDescription="@color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/demohouse" />

    <TextView
        android:id="@+id/namelist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/imagelist"
        android:text="@string/demo"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/salevolume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/namelist"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/imagelist"
        android:text="@string/demo"
        android:textColor="@color/common_grey_word"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/pricelist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/imagelist"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/imagelist"
        android:text="@string/demo"
        android:textColor="@color/red"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/shoppingcartlist"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@id/imagelist"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:contentDescription="@color/transparent"
        android:src="@drawable/shoppingcartcom" />

</RelativeLayout>